# AI Brain Configuration
# Options: 'local' (Ollama) or 'remote' (Google Colab / External)
BRAIN_TYPE=remote

# Local Language Model (if BRAIN_TYPE=local)
LOCAL_BRAIN_MODEL=gemma2:2b

# GitHub API Credentials (Required for Repo Scanning)
# Get these from https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# Frontend URL (for CORS)
FRONTEND_BASE_URL=http://localhost:5173

# Backend Port
PORT=3000

# Remote Brain URL (if BRAIN_TYPE=remote)
# This is usually an ngrok URL provided by the Colab script
REMOTE_BRAIN_URL=https://xxxx-xx-xx.ngrok-free.app
